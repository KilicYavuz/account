@model GhostNetwork.Account.Web.Quickstart.Account.RegistrationInputModel

<div class="login-page">
    <div class="lead">
        <h1>Registration</h1>
        <p>Create new account</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Registration</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="FirstName" asp-for="FirstName">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="LastName" asp-for="LastName">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm"></label>
                            <input type="password" class="form-control" placeholder="PasswordConfirm" asp-for="PasswordConfirm" autocomplete="off">
                        </div>
                        <button class="btn btn-primary" name="button" value="submit">Submit</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
